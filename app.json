{
    "expo": {
        "name": "Daily MSG",
        "slug": "daily-message-app",
        "version": "1.0.2",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "ios": {
            "supportsTablet": true
        },
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "updates": {
            "fallbackToCacheTimeout": 0
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#000000"
            },
            "package": "com.daily_msg.daily_msg",
            "versionCode": 3,
            "googleServicesFile": "./google-services.json",
            "useNextNotificationsApi": true,
            "permissions": [
                "NOTIFICATIONS",
                "USER_FACING_NOTIFICATIONS",
                "VIBRATE",
                "READ_EXTERNAL_STORAGE",
                "WRITE_EXTERNAL_STORAGE"
            ]
        },
        "web": {
            "favicon": "./assets/favicon.png"
        },
        "description": " Daily MSG provides fresh tips every day that is intended to inspire the day to day life situations easier for our users.",
        "githubUrl": "https://github.com/Cradoe/daily-msg-app.git"
    }
}